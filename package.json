{
  "name": "fullstack-ecommerce-monolith",
  "version": "1.0.0",
  "description": "Full-stack e-commerce inventory management system with modern monolith architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "build:all": "powershell -ExecutionPolicy Bypass -File ./scripts/build-all.ps1",
    "dev:all": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-all.ps1",
    "test:all": "powershell -ExecutionPolicy Bypass -File ./scripts/test-all.ps1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.20.0",
    "drizzle-orm": "^0.29.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "kysely": "^0.27.0",
    "pg": "^8.11.0",
    "postgres": "^3.4.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "keywords": [
    "monorepo",
    "typescript",
    "react",
    "next.js",
    "react-native",
    "trpc",
    "drizzle",
    "postgresql",
    "redis",
    "e-commerce",
    "inventory-management"
  ],
  "author": "Development Team",
  "license": "MIT"
}
