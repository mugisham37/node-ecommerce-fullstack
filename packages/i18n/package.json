{
  "name": "@ecommerce/i18n",
  "version": "1.0.0",
  "description": "Internationalization package for the e-commerce monolith",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "validate-translations": "tsx scripts/validate-translations.ts",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "i18next": "^23.7.6",
    "react-i18next": "^13.5.0",
    "react-native-localize": "^3.0.6",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.0",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "rimraf": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "typescript",
    "react"
  ],
  "author": "E-commerce Team",
  "license": "MIT",
  "type": "commonjs"
}
