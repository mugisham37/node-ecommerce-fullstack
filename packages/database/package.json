{
  "name": "@ecommerce/database",
  "version": "0.1.0",
  "description": "Database layer with Drizzle ORM and Kysely query builder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "drizzle-kit generate:pg",
    "migrate": "drizzle-kit push:pg",
    "studio": "drizzle-kit studio",
    "seed": "tsx src/seeds/index.ts",
    "backup": "powershell -ExecutionPolicy Bypass -File ./scripts/backup.ps1",
    "restore": "powershell -ExecutionPolicy Bypass -File ./scripts/restore.ps1",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.0",
    "kysely": "^0.27.0",
    "pg": "^8.11.0",
    "postgres": "^3.4.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    },
    "./connection": {
      "types": "./dist/connection/index.d.ts",
      "default": "./dist/connection/index.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "default": "./dist/repositories/index.js"
    },
    "./query-builder": {
      "types": "./dist/query-builder/index.d.ts",
      "default": "./dist/query-builder/index.js"
    },
    "./transactions": {
      "types": "./dist/transactions/index.d.ts",
      "default": "./dist/transactions/index.js"
    },
    "./monitoring": {
      "types": "./dist/monitoring/index.d.ts",
      "default": "./dist/monitoring/index.js"
    },
    "./health": {
      "types": "./dist/health/index.d.ts",
      "default": "./dist/health/index.js"
    }
  }
}