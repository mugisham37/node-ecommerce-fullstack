# Environment variables for Docker Compose production

# Database Configuration
POSTGRES_DB=ecommerce_inventory_prod
POSTGRES_USER=ecommerce_user
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://ecommerce_user:secure_password_here@postgres:5432/ecommerce_inventory_prod

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_here
REDIS_URL=redis://:secure_redis_password_here@redis:6379

# Application Configuration
NODE_ENV=production
JWT_SECRET=your_super_secure_jwt_secret_key_here
API_PORT=4000
WEB_PORT=3000

# External URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

# Monitoring
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_here

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# File Storage
UPLOAD_MAX_SIZE=20971520
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
CACHE_TTL=3600
SESSION_TIMEOUT=86400